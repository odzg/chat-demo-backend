{
  "$schema": "https://json.schemastore.org/package",
  "name": "chat-demo-backend",
  "version": "0.0.0",
  "private": true,
  "description": "Backend for the chat demo application",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "check-spelling": "cspell --no-progress --show-context .",
    "dev": "node --watch --env-file=.env.development ./src/index.ts",
    "format": "prettier --write --cache .",
    "format:check": "prettier --check --cache .",
    "git-commit": "commit",
    "lint": "eslint --max-warnings=0 --flag=unstable_native_nodejs_ts_config .",
    "lint:commit-message": "commitlint --edit && cspell --no-progress --no-summary .git/COMMIT_EDITMSG",
    "lint:dependency-cruiser": "depcruise .",
    "lint:syncpack": "syncpack lint",
    "start": "node ./src/index.ts",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@date-fns/utc": "2.1.1",
    "@fastify/cors": "11.1.0",
    "@fastify/jwt": "10.0.0",
    "@fastify/websocket": "11.2.0",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "fastify-type-provider-zod": "6.1.0",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/prompt-cli": "20.1.0",
    "@commitlint/types": "20.0.0",
    "@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
    "@eslint/js": "9.39.1",
    "@eslint/markdown": "7.5.1",
    "@types/node": "24.10.1",
    "@types/ws": "8.18.1",
    "cspell": "9.3.2",
    "dependency-cruiser": "17.3.1",
    "eslint": "9.39.1",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-de-morgan": "2.0.0",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "61.4.1",
    "eslint-plugin-json-schema-validator": "5.5.0",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-math": "0.13.1",
    "eslint-plugin-module-interop": "0.3.1",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-package-json": "0.85.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-regexp": "2.10.0",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-yml": "1.19.0",
    "eslint-typegen": "2.3.0",
    "knip": "5.70.2",
    "lefthook": "2.0.4",
    "prettier": "3.7.1",
    "syncpack": "13.0.4",
    "type-fest": "5.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
